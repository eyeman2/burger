<h1>What dat Baby Name!</h1>

<h2>List of possible baby names</h2>

<ul>
    {{#each names}} {{#unless listIt}}
    <li>
        {{name}}
        <form>
            <button class="fav" type="submit" data-id={{id}}>Add to Favorites</button>
        </form>
    </li>

    {{/unless}} {{/each}}
</ul>

<h2>Favorite names</h2>
<ul>
    {{#each names}} {{#if listIt}}
    <li>
        {{name}}
        <form action="api/names/{{this.id}}?" _method=PUT method="POST">
            <button type="submit" class="notfav" data-id={{id}}> Changed Mind </button>
        </form>
    </li>
    {{/if}} {{/each}}
</ul>

<h2>Add a name</h2>
<div>
    <form class="create-form">
        <div class="form-group">
            <label for="babe">Baby name</label>
            <input type="text" id="babe" data-name="newName">
        </div>

        <button id="addOn" type="submit">Add to List</button>
    </form>
</div>